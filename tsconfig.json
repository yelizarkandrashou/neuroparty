{
  "compilerOptions": {
    "rootDir": ".",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "include": ["./src"]  ,
  "exclude": ["node_modules","./src/app"],
}
